<!-- Page Heading/Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Categories</h1>
  </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row">
  <div class="col-lg-12">
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
      <h2>Categories</h2>
      <table class="table table-striped table-bordered">
        <tr>
          <th>
            Name
          </th>
          <th>
          </th>
        </tr>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to "Edit", edit_category_path(category), :class => "btn btn-warning" %>
              <%= link_to "Delete", category_path(category), :class => "btn btn-danger", :method => "delete", :confirm => "You really want to delete category?" %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= link_to "Create Category", new_category_path, :class => "btn btn-primary" %>
    </div>
    <!-- /.row -->

  </div>
</div>
<!-- /.row -->
