<!-- Page Heading/Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Monument <%= @monument.name %> Photo</h1>
  </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row">
  <div class="col-lg-12">
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
      <h2><%= link_to @monument.name, collection_monument_path(@collection, @monument) %><h2>
        <%= image_tag @photo.image.url %>
        <%#= image_tag @photo.image.url(:medium) %>
        <%#= image_tag @photo.image.url(:thumb) %>
        <br class="clearfix"/>
        <% if @monument.ownered_by?(logged_in_user) %>
          <%= link_to "Edit", edit_collection_monument_photo_path(@collection, @monument, @photo), :class => "btn btn-warning" %>
          <%= link_to "Delete", collection_monument_photo_path(@collection, @monument, @photo), :class => "btn btn-danger", :method => "delete", :confirm => "You really want to delete photo?" %>
        <% end %>

    </div>
    <!-- /.row -->

  </div>
</div>
<!-- /.row -->


