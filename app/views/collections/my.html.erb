<!-- Page Heading/Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">My Collections</h1>
  </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row">
  <div class="col-lg-12">
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
      <table class="table table-striped table-bordered">
      <% @collections.each do |c| %>
        <tr>
          <td><%= link_to c.name, collection_path(c) %></td>
          <td>
            <%= link_to "Edit", edit_collection_path(c), :class => "btn btn-primary" %>
            <%= link_to "Delete", collection_path(c), :method => "delete", :confirm => "You sure want to delete collection?", :class => "btn btn-danger" %>
          </td>
        </tr>

      <% end %>
      </table>
      <%= link_to "Create Collection", new_collection_path, :class => "btn btn-primary" %>
    </div>
    <!-- /.row -->
  </div>
</div>
<!-- /.row -->
