<!-- Page Heading/Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Collection <%= @collection.name %></h1>
  </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row">
  <div class="col-lg-12">
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
      <h2>Collection <%= @collection.name %></h2>
        <table class="table table-striped table-bordered">
          <tr>
            <th>
              Monument name
            </th>
            <th>
              Category
            </th>
          </tr>
          <% @collection.monuments.each do |monument| %>
            <tr>
              <td><%= link_to monument.name, collection_monument_path(@collection, monument) %></td>
              <td><%= monument.category.name %></td>
            </tr>
          <% end %>
        </table>

        <% if @collection.owner_is?(logged_in_user) %>
        <%= link_to "Create Monument", new_collection_monument_path(@collection), :class => "btn btn-primary" %>
        <%= link_to "Edit", edit_collection_path(@collection), :class => "btn btn-warning" %>
        <%= link_to "Delete", collection_path(@collection), :class => "btn btn-danger", :method => "delete", :confirm => "You really want to delete collection?" %>
      <% end %>
    </div>
    <!-- /.row -->

  </div>
</div>
<!-- /.row -->
