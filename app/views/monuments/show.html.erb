<!-- Page Heading/Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Monument <%= @monument.name %></h1>
  </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row">
  <div class="col-lg-12">
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
      <h2><%= @monument.name %><h2>
        <div class="row">
        <% @monument.photos.each do |photo| %>
          <div class="col-md-3 img-portfolio">
            <%= link_to image_tag(photo.image.url(:thumb)), collection_monument_photo_path(@collection, @monument, photo) %>
          </div>
        <% end %>
        </div>
      <div class="clearfix"/>
      <% if @monument.ownered_by?(logged_in_user) %>
        <%= link_to "Add Photo", new_collection_monument_photo_path(@collection, @monument), :class => "btn btn-primary" %>
        <%= link_to "Edit", edit_collection_monument_path(@collection, @monument), :class => "btn btn-warning" %>
        <%= link_to "Delete", collection_monument_path(@collection, @monument), :class => "btn btn-danger", :method => "delete", :confirm => "You really want to delete collection?" %>
      <% end %>

    </div>
    <!-- /.row -->

  </div>
</div>
<!-- /.row -->
